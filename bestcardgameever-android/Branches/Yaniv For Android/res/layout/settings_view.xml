<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical" android:weightSum="100" android:layout_height="fill_parent" android:gravity="top|center_vertical">
	<!-- Sounds -->
	<LinearLayout android:layout_height="wrap_content" android:weightSum="0" android:layout_width="fill_parent" android:gravity="center">

		<ToggleButton android:id="@+id/soundToggle"
			android:layout_width="128dip" android:layout_height="128dip"
			android:textOn="" android:textOff=""
			style="@style/SoundToggleButton" android:layout_gravity="center"/>

	</LinearLayout>
	<!-- PlayerName -->
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:weightSum="100" android:padding="5dip">
		<TextView android:id="@+id/DefaultPlayerNameTv" android:layout_width="wrap_content"
			android:layout_weight="30"
			android:layout_height="wrap_content" android:text="@string/pDefName"
			android:textSize="18sp">
		</TextView>
		<EditText android:id="@+id/PlayerNameEt" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/pNameDefVal"
			android:layout_weight="70"
			android:textSize="18sp"
			android:maxLength="20">
		</EditText>
	</LinearLayout>
	<!-- OK Button -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="30"
		android:gravity="center_horizontal|bottom" android:paddingTop="2px" android:layout_gravity="bottom">
		<Button android:id="@+id/settingsDialogOkButton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/settingsDialogOkMsg" />
	</LinearLayout>
</LinearLayout>
